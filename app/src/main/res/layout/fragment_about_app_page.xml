<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/knowlodgeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="#F2F4A0"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".view.AboutAppFragment">


    <TextView
        android:id="@+id/aboutAppText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="The app was created by using Kotlin Language in Android Studio."
        android:textAlignment="center"
        android:textColor="#F45B5B"
        android:textSize="20sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/aboutPublisherText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="The publisher of this app is Ahmet Emin YÄ±lmaz who is an engineering student."
        android:textAlignment="center"
        android:textColor="#F45B5B"
        android:textSize="20sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/expectationText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="I hope you will like it :)"
        android:textAlignment="center"
        android:textColor="#F45B5B"
        android:textSize="20sp"
        android:textStyle="italic" />

</LinearLayout>